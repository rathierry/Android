<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/user_login_relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:paddingLeft="?listPreferredItemPaddingLeft"
    android:paddingRight="?listPreferredItemPaddingRight">

    <!--<TextView
        android:id="@+id/user_login_textView_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_user_login_textView_layout_height"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:background="@color/color_pink"
        android:fontFamily="serif-monospace"
        android:gravity="center"
        android:text="@string/user_login_text_title"
        android:textAlignment="center"
        android:textColor="@color/color_white"
        android:textSize="@dimen/activity_user_login_textView_size"
        android:textStyle="bold"
        android:typeface="monospace" />-->

    <ImageView
        android:id="@+id/user_login_imageView_logo"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activity_user_login_imageView_layout_height"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/activity_user_login_imageView_layout_marginTop"
        android:gravity="center_horizontal|center_vertical"
        android:src="@drawable/ic_user_black" />

    <!-- Phone Number Label -->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/user_login_text_input_layout_phone"
        android:layout_width="@dimen/activity_user_login_phone_text_input_layout_width"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/user_login_imageView_logo"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/activity_user_login_phone_text_input_layout_marginTop"
        android:background="@drawable/round_corner_text_input_layout">

        <EditText
            android:id="@+id/user_login_input_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_phone_black"
            android:hint="@string/user_login_input_hint_phone"
            android:inputType="number"
            android:maxLength="10"
            android:textAlignment="viewStart"
            android:textAllCaps="true"
            android:textColor="@color/color_black"
            android:textSize="@dimen/activity_user_login_phone_edit_text_size"
            android:typeface="monospace" />
    </android.support.design.widget.TextInputLayout>

    <!-- Password Label -->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/user_login_text_input_layout_password"
        android:layout_width="@dimen/activity_user_login_password_text_input_layout_width"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/user_login_text_input_layout_phone"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/activity_user_login_password_text_input_layout_marginTop"
        android:background="@drawable/round_corner_toggle"
        android:gravity="center"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/color_black">

        <EditText
            android:id="@+id/user_login_input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_lock_black"
            android:hint="@string/user_login_input_hint_password"
            android:inputType="textPassword"
            android:textAlignment="viewStart"
            android:textAllCaps="true"
            android:textColor="@color/color_black"
            android:textSize="@dimen/activity_user_login_password_edit_text_size"
            android:typeface="monospace" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/user_login_textView_forgot_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/user_login_text_input_layout_password"
        android:layout_marginTop="@dimen/activity_user_login_textView_forgot_password_layout_marginTop"
        android:text="@string/user_login_text_forgot_password"
        android:textAlignment="textEnd"
        android:textColor="@color/color_black"
        android:textSize="@dimen/activity_user_login_textView_forgot_password_size"
        android:textStyle="bold"
        android:typeface="monospace" />

    <Button
        android:id="@+id/user_login_btn_validate"
        android:layout_width="@dimen/activity_user_login_btn_submit_layout_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_login_textView_forgot_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_user_login_btn_submit_layout_marginTop"
        android:background="@drawable/button_rounded_states_red"
        android:text="@string/user_login_btn_submit"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/color_white"
        android:textSize="@dimen/activity_user_login_btn_submit_text_size"
        android:textStyle="bold"
        android:typeface="monospace" />

    <Button
        android:id="@+id/user_login_btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_rounded_states_red"
        android:text="@string/user_login_btn_register"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/color_white"
        android:textSize="@dimen/activity_user_login_btn_footer_text_size"
        android:textStyle="bold"
        android:typeface="monospace" />
</RelativeLayout>