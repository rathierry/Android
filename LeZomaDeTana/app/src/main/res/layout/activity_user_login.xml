    <ImageView
        android:id="@+id/user_login_imageView_logo"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal|center_vertical"
        android:src="@drawable/ic_splash" />

    <!-- Phone Number Label -->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/user_login_text_input_layout_phone"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/user_login_imageView_logo"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:textColorHint="@color/color_white">

        <EditText
            android:id="@+id/user_login_input_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:hint="Laharana finday"
            android:inputType="phone"
            android:textAlignment="viewStart"
            android:textAllCaps="true"
            android:textColor="@color/color_white"
            android:textColorHint="@color/color_white"
            android:textSize="20sp"
            android:typeface="monospace" />
    </android.support.design.widget.TextInputLayout>

    <!-- Password Label -->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/user_login_text_input_layout_password"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/user_login_text_input_layout_phone"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="225dp"
        android:gravity="center"
        android:textColorHint="@color/color_white"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/color_white">

        <EditText
            android:id="@+id/user_login_input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:hint="Teny miafina"
            android:inputType="textPassword"
            android:textAlignment="viewStart"
            android:textAllCaps="true"
            android:textColor="@color/color_white"
            android:textColorHint="@color/color_white"
            android:textSize="20sp"
            android:typeface="monospace" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/user_login_textView_forgot_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/user_login_text_input_layout_password"
        android:layout_marginTop="10dp"
        android:fontFamily="serif-monospace"
        android:text="Teny miafina adino"
        android:textAlignment="textEnd"
        android:textColor="@color/color_white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <Button
        android:id="@+id/user_login_btn_validate"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_login_textView_forgot_password"
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true"
        android:background="@android:color/background_light"
        android:fontFamily="serif-monospace"
        android:text="E k e n a"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/color_pink"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <Button
        android:id="@+id/user_login_btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/color_pink"
        android:fontFamily="serif-monospace"
        android:text="Olona vaovao anoratra anarana"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/color_white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="monospace" />
</RelativeLayout>